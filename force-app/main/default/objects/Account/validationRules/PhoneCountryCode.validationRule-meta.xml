<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PhoneCountryCode</fullName>
    <active>true</active>
    <errorConditionFormula>if(!ISBLANK(Phone) &amp;&amp; !ISNULL(Phone),LEFT(Phone, 1) &lt;&gt; &quot;+&quot;,false)</errorConditionFormula>
    <errorDisplayField>Phone</errorDisplayField>
    <errorMessage>Please enter the country code. Example: +49</errorMessage>
</ValidationRule>
