<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>MobileNumberFormat</fullName>
    <active>true</active>
    <errorConditionFormula>if(!ISBLANK(MobilePhone) &amp;&amp; !ISNULL(MobilePhone),LEFT(MobilePhone, 1) &lt;&gt; &quot;+&quot;,false)</errorConditionFormula>
    <errorDisplayField>MobilePhone</errorDisplayField>
    <errorMessage>Please enter the country code. Example: +49</errorMessage>
</ValidationRule>
